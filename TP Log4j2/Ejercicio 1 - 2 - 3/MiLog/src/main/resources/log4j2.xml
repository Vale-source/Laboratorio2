<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
        <File name="Registro Log" fileName="D:\Tecnicatura en programacion\2do semestre\Laboratorio 2\Log4j\log.txt" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </File>
    </Appenders>
    <Loggers>
        <Root level="info"> //Ejercicio 3.b (Envio de mensajes a un fichero .txt)
            <AppenderRef ref="Registro Log" />
        </Root>
    </Loggers>
</Configuration>